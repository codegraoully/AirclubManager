{% extends 'base.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}
    <h1>Recherche des réservation</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Duree</th>
            <th>Pilote</th>
            <th>Avion</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for reservation in result %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.date_vol ? reservation.date_vol|date('D d F Y à H:i') : '' }}</td>
                <td>{{ reservation.duree_vol }}</td>
                <td>{{ reservation.nom }}</td>
                <td>{{ reservation.prenom }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="actions">

                        <a href="{{ path('reservation_show', {'id': reservation.id}) }}"
                           class="btn-secondary btn">Voir</a>
                        <a href="{{ path('reservation_edit', {'id': reservation.id}) }}" class="btn btn-secondary">Modifier</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#    {{ form(form) }}#}
{% endblock %}
